<UserControl x:Class="PhccHsm.ConfigUi.ComPort"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhccHsm.ConfigUi"
             mc:Ignorable="d" 
             d:DesignHeight="115" d:DesignWidth="320">
    <Grid Background="White" Margin="0,0,0,-55">
        <Label Content="COM Port" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbComPort" SelectionChanged="CbComPort_OnSelectionChanged" HorizontalAlignment="Left" Margin="120,31,0,0" VerticalAlignment="Top" Width="185"/>
        <Button Click="BtnOk_OnClick" Name="btnOk" Content="OK" HorizontalAlignment="Left" Margin="80,130,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="BtnCancel_OnClick" Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="165,130,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Friendly Name" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Height="23" Margin="120,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="185"/>

    </Grid>
</UserControl>
